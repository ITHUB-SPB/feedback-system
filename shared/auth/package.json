{
  "name": "@shared/auth",
  "private": true,
  "type": "module",
  "main": "./src/index.ts",
  "files": [
    "./src/*"
  ],
  "exports": {
    ".": {
      "types": "./src/index.ts",
      "import": "./src/index.ts"
    }
  },
  "scripts": {
    "dev:auth:generate": "dotenvx run -f .env.development -- npx @better-auth/cli generate --config ./src/cli-config.ts --output ../database/src/auth.initial.sql",
    "dev:auth:migrate": "dotenvx run -f .env.development -- npx @better-auth/cli migrate --config ./src/cli-config.ts",
    "dev:auth:seed": "dotenvx run -f .env.development -- tsx ./src/seed.ts",
    "staging:auth:generate": "dotenvx run -f .env.staging -- npx @better-auth/cli generate --config ./src/cli-config.ts --output ../database/src/auth.initial.sql",
    "staging:auth:migrate": "dotenvx run -f .env.staging -- npx @better-auth/cli migrate --config ./src/cli-config.ts",
    "staging:auth:seed": "dotenvx run -f .env.staging -- tsx ./src/seed.ts",
    "production:auth:generate": "dotenvx run -f .env.production -- npx @better-auth/cli generate --config ./src/cli-config.ts --output ../database/src/auth.initial.sql",
    "production:auth:migrate": "dotenvx run -f .env.production -- npx @better-auth/cli migrate --config ./src/cli-config.ts",
    "production:auth:seed": "dotenvx run -f .env.production -- tsx ./src/seed.ts",
    "check-types": "tsc --noEmit"
  },
  "dependencies": {
    "@dotenvx/dotenvx": "catalog:",
    "@shared/database": "workspace:*",
    "better-auth": "catalog:",
    "esbuild": "^0.27.2",
    "tsx": "catalog:"
  },
  "devDependencies": {
    "@better-auth/cli": "^1.4.9",
    "@shared/typescript-config": "workspace:*",
    "@types/node": "catalog:",
    "typescript": "catalog:"
  }
}