{
    "name": "@shared/database",
    "type": "module",
    "scripts": {
        "check-types": "tsc --noEmit",
        "dev:db:reset": "dotenvx run -f .env.development -- tsx src/seed/index.ts reset",
        "dev:db:seed": "dotenvx run -f .env.development -- tsx src/seed/index.ts seed",
        "dev:db:check": "dotenvx run -f .env.development -- tsx src/check.ts",
        "dev:db:migrate": "dotenvx run -f .env.development -- tsx src/migrate.ts",
        "staging:db:reset": "dotenvx run -f .env.staging -- tsx src/seed/index.ts reset",
        "staging:db:seed": "dotenvx run -f .env.staging -- tsx src/seed/index.ts seed",
        "staging:db:check": "dotenvx run -f .env.staging -- tsx src/check.ts",
        "staging:db:migrate": "dotenvx run -f .env.staging -- tsx src/migrate.ts",
        "production:db:reset": "dotenvx run -f .env.production -- tsx src/seed/index.ts reset",
        "production:db:seed": "dotenvx run -f .env.production -- tsx src/seed/index.ts seed",
        "production:db:check": "dotenvx run -f .env.production -- tsx src/check.ts",
        "production:db:migrate": "dotenvx run -f .env.production -- tsx src/migrate.ts"
    },
    "exports": {
        ".": "./src/index.ts",
        "./*": "./src/*.ts"
    },
    "dependencies": {
        "@dotenvx/dotenvx": "catalog:",
        "kysely": "catalog:",
        "pg": "catalog:",
        "valibot": "catalog:"
    },
    "devDependencies": {
        "@faker-js/faker": "^10.1.0",
        "@shared/typescript-config": "workspace:*",
        "@types/node": "catalog:",
        "@types/pg": "catalog:",
        "tsx": "catalog:",
        "typescript": "catalog:"
    },
    "packageManager": "pnpm@10.25.0"
}